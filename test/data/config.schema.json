{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "microcontroller": {
      "type": "string"
    },
    "control types": {
      "type": "object",
      "properties": {
        "null": {
          "type": "string"
        },
        "button": {
          "type": "string"
        },
        "toggle": {
          "type": "string"
        },
        "rotary": {
          "type": "string"
        },
        "light": {
          "type": "string"
        },
        "relay": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "controls": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "group": {
            "type": "string"
          },
          "row": {
            "type": "integer"
          },
          "rows": {
            "type": "array",
            "items": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "type": {
                    "$ref": "#/definitions/controlType"
                  },
                  "name": {
                    "type": "string"
                  }
                },
                "required": [
                  "type",
                  "name"
                ],
                "additionalProperties": false
              }
            }
          }
        },
        "required": [
          "group",
          "row",
          "rows"
        ],
        "additionalProperties": false
      }
    },
    "I2C Config": {
      "type": "object",
      "properties": {
        "devices": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "address": {
                "type": "integer"
              },
              "name": {
                "type": "string"
              },
              "type": {
                "type": "string"
              },
              "config": {
                "type": "object",
                "properties": {
                  "pins": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "reset": {
                    "type": "integer"
                  },
                  "A": {
                    "type": "object",
                    "properties": {
                      "irq": {
                        "type": "integer"
                      },
                      "pins": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      }
                    },
                    "additionalProperties": false
                  },
                  "B": {
                    "type": "object",
                    "properties": {
                      "irq": {
                        "type": "integer"
                      },
                      "pins": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      }
                    },
                    "additionalProperties": false
                  }
                }
              }
            },
            "required": [
              "address",
              "name",
              "type",
              "config"
            ],
            "additionalProperties": false
          }
        }
      },
      "required": [
        "devices"
      ],
      "additionalProperties": false
    },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "patternProperties": {
          "^.*$": {
            "type": "array",
            "items": {
              "type": "object",
              "patternProperties": {
                "^.*$": {
                  "type": "object",
                  "properties": {
                    "value": {
                      "type": "integer"
                    }
                  },
                  "patternProperties": {
                    "^.*$": {
                      "type": "integer"
                    }
                  },
                  "required": [
                    "value"
                  ]
                }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    },
    "NeoPixels": {
      "type": "object"
    }
  },
  "required": [
    "microcontroller",
    "control types",
    "controls",
    "I2C Config",
    "actions",
    "NeoPixels"
  ],
  "definitions": {
    "controlType": {
      "enum": [
        "null",
        "button",
        "toggle",
        "rotary",
        "light",
        "relay"
      ]
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "I2C Config": {
            "properties": {
              "devices": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "const": "pcf8575"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "then": {
        "properties": {
          "I2C Config": {
            "properties": {
              "devices": {
                "items": {
                  "properties": {
                    "config": {
                      "properties": {
                        "pins": {
                          "type": "array",
                          "items": {
                            "anyOf": [
                              {
                                "type": "string",
                                "pattern": "^[a-zA-Z]+[0-9+]_[0-9+]$"
                              },
                              {
                                "type": "object",
                                "patternProperties": {
                                  "^[a-zA-Z]+[0-9+]_[0-9+]$": {
                                    "type": "integer"
                                  }
                                },
                                "additionalProperties": false
                              }
                            ]
                          }
                        }
                      },
                      "required": [
                        "pins"
                      ],
                      "additionalProperties": false
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "I2C Config": {
            "properties": {
              "devices": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "const": "mcp23017"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "then": {
        "properties": {
          "I2C Config": {
            "properties": {
              "devices": {
                "items": {
                  "properties": {
                    "config": {
                      "properties": {
                        "reset": {
                          "type": "integer"
                        },
                        "A": {
                          "type": "object",
                          "properties": {
                            "irq": {
                              "type": "integer"
                            },
                            "pins": {
                              "type": "array",
                              "items": {
                                "type": "string"
                              }
                            }
                          },
                          "additionalProperties": false
                        },
                        "B": {
                          "type": "object",
                          "properties": {
                            "irq": {
                              "type": "integer"
                            },
                            "pins": {
                              "type": "array",
                              "items": {
                                "type": "string"
                              }
                            }
                          },
                          "additionalProperties": false
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  ],
  "additionalProperties": false
}