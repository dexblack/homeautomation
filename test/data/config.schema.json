{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "microcontroller": {
      "type": "string"
    },
    "control types": {
      "type": "object",
      "properties": {
        "null": {
          "type": "string"
        },
        "button": {
          "type": "string"
        },
        "toggle": {
          "type": "string"
        },
        "rotary": {
          "type": "string"
        },
        "light": {
          "type": "string"
        },
        "relay": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "controls": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "group": {
            "type": "string"
          },
          "row": {
            "type": "integer"
          },
          "rows": {
            "type": "array",
            "items": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "type": {
                    "$ref": "#/definitions/controlType"
                  },
                  "name": {
                    "type": "string"
                  }
                },
                "required": [
                  "type",
                  "name"
                ],
                "additionalProperties": false
              }
            }
          }
        },
        "required": [
          "group",
          "row",
          "rows"
        ],
        "additionalProperties": false
      }
    },
    "I2C Config": {
      "type": "object",
      "properties": {
        "devices": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "address": {
                "type": "integer"
              },
              "name": {
                "type": "string"
              },
              "type": {
                "type": "string"
              },
              "config": {
                "type": "object",
                "properties": {
                  "reset": {
                    "type": "integer"
                  },
                  "irq": {
                    "patternProperties": {
                      "^[A-Z]$": {
                        "type": "integer"
                      }
                    }
                  },
                  "pins": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "pin": {
                          "type": "integer"
                        },
                        "cid": {
                          "type": "string",
                          "pattern": "^[a-zA-Z]+[0-9]+_[0-9]+$"
                        },
                        "pole": {
                          "type": "integer"
                        }
                      },
                      "required": [
                        "pin", "cid"
                      ]
                    }
                  }
                },
                "additionalProperties": false
              }
            },
            "required": [
              "address",
              "name",
              "type",
              "config"
            ],
            "additionalProperties": false
          }
        }
      },
      "required": [
        "devices"
      ],
      "additionalProperties": false
    },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "patternProperties": {
          "^.*$": {
            "type": "array",
            "items": {
              "type": "object",
              "patternProperties": {
                "^.*$": {
                  "type": "object",
                  "properties": {
                    "value": {
                      "type": "integer"
                    }
                  },
                  "patternProperties": {
                    "^.*$": {
                      "type": "integer"
                    }
                  },
                  "required": [
                    "value"
                  ]
                }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    },
    "NeoPixels": {
      "type": "object"
    }
  },
  "required": [
    "microcontroller",
    "control types",
    "controls",
    "I2C Config",
    "actions",
    "NeoPixels"
  ],
  "definitions": {
    "controlType": {
      "enum": [
        "null",
        "button",
        "toggle",
        "rotary",
        "light",
        "relay"
      ]
    }
  },
  "additionalProperties": false
}